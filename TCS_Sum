#include<bits/stdc++.h>
using namespace std;

int main()
{
    int sum1=0,sum2=0,count;int n;
    cin>>n;int arr[n];
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }

    for(int i=n-2;i>=0;i--)
    {
        for(int j=0;j<=i;j++)
        {
                sum1+=arr[j];
        }
        
        cout<<endl;
        for(int k=n-1;k>i;k--)
        {
                sum2+=arr[k];
        }
        cout<<endl;
        if(sum1<=sum2)
        {
            count=n-i;cout<<count<<endl;break;
        }sum1=sum2=0;
    }
    getchar();
     return 0;
}
